{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ES2020",
        "esModuleInterop": true,
        "sourceMap": true,
        "outDir": "dist",
        "noEmit": true,
        "allowImportingTsExtensions": true
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/**/*"
    ],
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node"
    }
}